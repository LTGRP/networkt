BoxLayout:
    orientation: 'vertical'    
    ActionBar:
        pos_hint: {'top':1}
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'Scrapet'
                with_previous: False
            ActionButton:
                text: 'Settings'
                on_release: app.open_settings()

    TextInput:
        multiline: True
        readonly: True
        background_color: (0,0,0,1)
        foreground_color: (1,1,1,1)

    ProgressBar:
        size_hint_y: None
        height: '50dp'

    Button:
        text: 'Run Complete Sequence'
        size_hint_y: None
        height: '50dp'
        on_release: app.run_button()
        
