BoxLayout:
    orientation: 'vertical'    
    ActionBar:
        pos_hint: {'top':1}
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'Scrapet'
                with_previous: False
            ActionButton:
                text: 'Settings'
                on_release: app.open_settings()

    Widget:
    Button:
        text: 'Run'
        size_hint_y: None
        height: '50dp'
        on_release: app.run_button()
        
    ProgressBar:
        size_hint_y: None
        height: '50dp'
