<ScrollableLabel>:
    Label:
        size_hint_y: None
        height: self.texture_size[1]
        text_size: self.width, None
        text: root.text
        padding_y: '5dp'
        padding_x: '5dp'
        color: [1,1,1,1]
        markup: True

<NetworktUI>:
    BoxLayout:
        size: (root.width, root.height)
        orientation: 'vertical'

        ActionBar:
            pos_hint: {'top':1}
            ActionView:
                ActionPrevious:
                    title: 'Networkt'
                    with_previous: False

                ActionButton:
                    text: 'Open'

                ActionButton:
                    text: 'Export'

                ActionButton:
                    text: 'Settings'
        
        BoxLayout:
            orientation: 'horizontal'

            Network:
                id: network
                nodes: app.nodes

            Accordion:
                size_hint: (None, 1)
                width: '350dp'
                orientation: 'vertical'
                
                AccordionItem:
                    title: 'Inspector'
                    Inspector:
                        text: 'Select a node from the network.'
                        selected_node: network.selected_node

                AccordionItem:
                    title: 'Statuses'
                    Statuses:
                        selected_node: network.selected_node
                        text: 'Select a node from the network.'

                AccordionItem:
                    title: 'Conversation'
                    Statuses:
                        selected_node: network.selected_node
                        text: 'Select a node from the network.'

        BoxLayout:
            orientation: 'vertical'
            size_hint:(1, None)
            height: '125dp'

            PreviewRangeSlider:
                id: preview_range_slider
                nodes: app.nodes

            # PreviewSlider:
            #     start: preview_range_slider.value1
            #     end: preview_range_slider.value2
            #     markers: preview_range_slider.markers

            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Play'
                Button:
                    text: 'Pause'
                Label:
                    text: 'Speed'    
                Slider:

                
            

