<Network>:
    canvas:

<ScrollableLabel>:
    Label:
        size_hint_y: None
        height: self.texture_size[1]
        text_size: self.width, None
        text: root.text
        padding_y: 10
        color: [1,1,1,1]
        markup: True


<NetworktUI>:
    BoxLayout:
        size: (root.width, root.height)
        orientation: 'vertical'

        ActionBar:
            pos_hint: {'top':1}
            ActionView:
                ActionPrevious:
                    title: 'Networkt'
                    with_previous: False
                ActionOverflow:
                ActionGroup:
                    text: 'File'
                    ActionButton:
                        text: 'Open'
                    ActionButton:
                        text: 'Export'
        
        BoxLayout:
            orientation: 'horizontal'

            Network:
                id: network

            Accordion:
                size_hint: (None, 1)
                width: 300
                orientation: 'vertical'
                AccordionItem:
                    title: 'Inspector'
                    ListView:
                        halign: 'left'
                        item_strings: network.description
                AccordionItem:
                    title: 'Messages'
                    ScrollableLabel:
                        id: messages
                        text: 'Text'


        Button:
            text: ''
            size_hint: (1, None)
            height: 100
            

