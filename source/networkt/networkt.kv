<Network>:
    canvas:

<ScrollableLabel>:
    Label:
        size_hint_y: None
        height: self.texture_size[1]
        text_size: self.width, None
        text: root.text
        padding_y: 10
        color: [1,1,1,1]
        markup: True

<NetworktUI>:
    BoxLayout:
        size: (root.width, root.height)
        orientation: 'vertical'

        ActionBar:
            pos_hint: {'top':1}
            ActionView:
                ActionPrevious:
                    title: 'Networkt'
                    with_previous: False

                ActionButton:
                    text: 'Open'

                ActionButton:
                    text: 'Export'

                ActionButton:
                    text: 'Settings'
        
        BoxLayout:
            orientation: 'horizontal'

            Network:
                id: network
                nodes: app.nodes

            Accordion:
                size_hint: (None, 1)
                width: '300dp'
                orientation: 'vertical'
                
                AccordionItem:
                    title: 'Inspector'
                    Inspector:
                        text: 'Text'
                        selected_node: network.selected_node

                AccordionItem:
                    title: 'Statuses'
                    Statuses:
                        selected_node: network.selected_node
                        text: 'Text'

        BoxLayout:
            orientation: 'vertical'
            size_hint:(1, None)
            height: '100dp'

            ProgressBar:
                value: 60

            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Play'
                Button:
                    text: 'Pause'
                Button:
                    text: 'Rewind'
                Label:
                    text: 'Speed'    
                Slider:

                
            

