<ScrollableLabel>:
    Label:
        size_hint_y: None
        height: self.texture_size[1]
        text_size: self.width, None
        text: root.text
        padding_y: '5dp'
        padding_x: '5dp'
        color: [1,1,1,1]
        markup: True

<NetworktUI>:
    BoxLayout:
        size: (root.width, root.height)
        orientation: 'vertical'
        ActionBar:
            pos_hint: {'top':1}
            ActionView:
                ActionPrevious:
                    title: 'Networkt'
                    app_icon: 'static/img/icon.png'
                    with_previous: False

                ActionButton:
                    text: 'Open'

                ActionButton:
                    text: 'Export'

                ActionButton:
                    text: 'Settings'
        
        BoxLayout:
            orientation: 'horizontal'

            Network:
                id: network
                nodes: app.nodes
                time_slice_start: preview_slider.time_slice_start
                time_slice_end: preview_slider.time_slice_end

            Accordion:
                size_hint: (None, 1)
                width: '350dp'
                orientation: 'vertical'
                
                AccordionItem:
                    title: 'Inspector'
                    Inspector:
                        text: 'Select a node from the network.'
                        selected_node: network.selected_node

                AccordionItem:
                    title: 'Statuses'
                    Statuses:
                        selected_node: network.selected_node
                        text: 'Select a node from the network.'

                AccordionItem:
                    title: 'Conversation'
                    Statuses:
                        selected_node: network.selected_node
                        text: 'Select a node from the network.'

        BoxLayout:
            orientation: 'vertical'
            size_hint:(1, None)
            height: '125dp'

            PreviewRangeSlider:
                id: preview_range_slider
                nodes: app.nodes

            PreviewSlider:
                id: preview_slider
                max: 1000
                start: preview_range_slider.value1
                end: preview_range_slider.value2
                markers: preview_range_slider.markers
                time_start: preview_range_slider.time_start
                time_end: preview_range_slider.time_end

            BoxLayout:
                orientation: 'horizontal'
                Button:
                    size: ('100dp', self.parent.height)
                    size_hint: (None, None)
                    image_source: 'static/img/play.png'
                    id: run_button
                    on_release: root.run_button_release()
                    Image:
                        source: run_button.image_source
                        size: self.parent.size

                Label:
                    text: 'Speed'
                    size: (self.texture_size[0] + 25, self.parent.height)
                    size_hint: (None, None)
                Slider:
                
            

